<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/background"
        android:layout_width="400dip"
        android:layout_height="match_parent"
        android:layout_margin="15dip"
        android:background="@drawable/climate_bg_heat"
        android:orientation="vertical">

        <TextView
            android:id="@+id/currentTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20"
            android:textSize="80sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Target"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/targetTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="20"
            android:textSize="52sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/eco"
            android:layout_width="match_parent"
            android:layout_height="60dip"
            android:layout_margin="5dip"
            android:layout_weight="1"
            android:tint="@color/app_color"
            android:visibility="invisible"
            app:srcCompat="@drawable/mdi_leaf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/tempDown"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                app:srcCompat="@drawable/mdi_chevron_down" />

            <ImageButton
                android:id="@+id/tempUp"
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitCenter"
                android:tint="@color/white"
                app:srcCompat="@drawable/mdi_chevron_up" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>